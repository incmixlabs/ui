{
  "extends": "@incmix/config/react.json",
  "exclude": ["node_modules", "dist", "./*.ts", "./src/demos", "./src/lib"],
  "include": ["src/"],
  "compilerOptions": {
    "types": ["@types/wicg-file-system-access", "vite/client"],
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/components": ["./components"],
      "@/hooks": ["./hooks"],
      "@/hooks/*": ["./hooks/*"],
      "@/icons": ["./components/icons"],
      "@/icons/*": ["./components/icons/*"],
      "@/lib": ["./lib"],
      "@/lib/*": ["./lib/*"],
      "@/primitives/*": ["./primitives/*"],
      "@/primitives": ["./primitives"],
      "@/style/*": ["./style/*"],
      "@/style": ["./style"],
      "@/types": ["./types", "./types.ts"],
      "@/types/*": ["./types/*"],
      "@/utils": ["./lib/utils"],
      "@/utils/*": ["./lib/utils/*"],
      "@widgets/*": ["./widgets/*"],
      "@widgets": ["./widgets"]
    }
  }
}
