{
  "extends": "../shared/config/react.json",
  "exclude": ["node_modules", "dist", "./*.ts"],
  "include": ["src/"],
  "compilerOptions": {
    "types": ["@types/wicg-file-system-access", "vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/shadcn": ["./src/components/shadcn"],
      "@/shadcn/*": ["./src/components/shadcn/*"],
      "@/lib": ["./src/lib"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
    }
  }
}
