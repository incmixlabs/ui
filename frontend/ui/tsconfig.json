{
  "extends": "@incmix/config/react.json",
  "exclude": ["node_modules", "dist", "./*.ts"],
  "include": ["src/"],
  "compilerOptions": {
    "types": ["@types/wicg-file-system-access", "vite/client"],
    "rootDir": "src",
    "baseUrl": "./src",

    "target": "es2022", // or esnext, es2020, etc.
    "module": "es2022", // or 
    "paths": {
      "@/*": ["./*"],
      "@base": ["./components/base"],
      "@base/*": ["./components/base"],
      "@charts": ["./components/charts"],
      "@charts/*": ["./components/charts/*"],
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@icons": ["./components/icons"],
      "@icons/*": ["./components/icons/*"],
      "@kanban": ["./components/kanban-board"],
      "@kanban/*": ["./components/kanban-board/*"],
      "@notes": ["./components/notes"],
      "@notes/*": ["./components/notes/*"],
      "@organizations": ["./components/organizations"],
      "@organizations/*": ["./components/organizations/*"],
      "@primitives": ["./primitives"],
      "@primitives/*": ["./primitives/*"],
      "@projects": ["./components/projects"],
      "@projects/*": ["./components/projects/*"],
      "@radixui": ["./components/radixui"],
      "@radixui/*": ["./components/radixui/*"],
      "@shadcn": ["./components/shadcn"],
      "@shadcn/*": ["./components/shadcn/*"],
      "@stepper": ["./components/stepper"],
      "@stepper/*": ["./components/stepper/*"],
      "@sidebar": ["./components/sidebar"],
      "@sidebar/*": ["./components/sidebar/*"],
      "@secondary-sidebars": ["./components/secondary-sidebars"],
      "@secondary-sidebars/*": ["./components/secondary-sidebars/*"],
      "@styles/*": ["./styles/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@widgets/*": ["./widgets/*"],
      "@widgets": ["./widgets"]
    }
  }
}
