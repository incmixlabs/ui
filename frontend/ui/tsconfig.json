{
  "extends": "@incmix/config/react.json",
  "exclude": ["node_modules", "dist", "./*.ts"],
  "include": ["src/"],
  "compilerOptions": {
    "types": ["@types/wicg-file-system-access", "vite/client"],
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@base": ["./components/base"],
      "@base/*": ["./components/base/*"],
      "@card": ["./components/card"],
      "@card/*": ["./components/card/*"],
      "@components/*": ["./components/*"],
      "@components": ["./components"],
      "@hooks": ["./hooks"],
      "@hooks/*": ["./hooks/*"],
      "@icons": ["./components/icons"],
      "@icons/*": ["./components/icons/*"],
      "@primitives": ["./primitives"],
      "@primitives/*": ["./primitives/*"],
      "@radixui/*": ["./components/radixui/*"],
      "@radixui": ["./components/radixui"],
      "@shadcn": ["./components/shadcn"],
      "@shadcn/*": ["./components/shadcn/*"],
      "@types": ["./types"],
      "@types/*": ["./types/*"],
      "@utils": ["./utils"],
      "@utils/*": ["./utils/*"],
      "@widgets/*": ["./widgets/*"],
      "@widgets": ["./widgets"]
    }
  }
}
