{
  "extends": "@incmix/config/react.json",
  "include": ["src/**/*", "radix-ui/**/*", "shadcn/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "storybook-static",
    ".next",
    ".cache",
    "stories",
    "src/preset.ts",
    "shadcn",
    "radix-ui",
    "utils",
    "./store"
  ],
  "compilerOptions": {
    "jsx": "react",
    "types": ["@types/wicg-file-system-access", "vite/client", "node"],
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/src": ["./src"],
      "@/src/*": ["./src/*"],
      "@/base": ["src/1base"],
      "@/base/*": ["src/1base/*"],
      "@/elements/*": ["src/2elements/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/layouts/*": ["./src/4layouts/*"],
      "@/radix-ui": ["./radix-ui/components"],
      "@/radix-ui/*": ["./radix-ui/components/*"],
      "@/radix": ["./radix-ui/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/shadcn-ui/*": ["./shadcn/components/ui/*"],
      "@/shadcn/*": ["./shadcn/*"],
      "@/types": ["./src/types.ts"],
      "@/ai-elements": ["src/3b-ai-elements/*"],
      "@/auto-form": ["src/3blocks/auto-form"],
      "@/auto-form/*": ["src/3blocks/auto-form/*"],
      "@/service": ["src/services"],
      "@/service/*": ["src/services/*"],
      "@/tanstack-table": ["src/3blocks/tanstack-table"],
      "@/tanstack-table/*": ["src/3blocks/tanstack-table/*"]
    }
  }
}
