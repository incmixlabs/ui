{
  "extends": "@incmix/config/react.json",
  "include": ["src/**/*", "radix-ui/**/*", "shadcn/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "storybook-static",
    ".next",
    ".cache",
    "stories",
    "src/preset.ts",
    "shadcn",
    "radix-ui"
  ],
  "compilerOptions": {
    "types": ["@types/wicg-file-system-access", "vite/client", "node"],
    "rootDir": ".",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/src": ["./src"],
      "@/src/*": ["./src/*"],
      "@/base": ["./src/base"],
      "@/base/*": ["./src/base/*"],
      "@/elements/*": ["./src/elements/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/layouts/*": ["./src/layouts/*"],
      "@/radix-ui": ["./radix-ui/components"],
      "@/radix-ui/*": ["./radix-ui/components/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/shadcn/*": ["./shadcn/*"],
      "@/shadcn-ui/*": ["./shadcn/components/ui/*"],
      "@shadcn/*": ["./shadcn/*"],
      "shadcn/*": ["./shadcn/*"]
    }
  }
}
