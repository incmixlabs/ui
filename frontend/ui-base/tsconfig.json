{
  "extends": "@incmix/config/react.json",
  "include": ["src/", "stories/"],
  "compilerOptions": {
    "types": ["@types/wicg-file-system-access", "vite/client"],

    "paths": {
      "@/src": ["./src"],
      "@/src/*": ["./src/*"],
      "@/base": ["./src/base"],
      "@/base/*": ["./src/base/*"],
      "@/radix-ui": ["./radix-ui"],
      "@/radix-ui/*": ["./radix-ui/*"],
      "@/shadcn": ["./shadcn"],
      "@/shadcn/*": ["./shadcn/*"]
    }
  },
  "exclude": ["**/*.stories.tsx", ".storybook/**/*", "src/stories/**/*"]
}
